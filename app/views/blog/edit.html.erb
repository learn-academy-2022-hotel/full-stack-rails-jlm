<h3> Edit Blog Post </h3>
<%= form_with model: @blog, method: :patch do | form | %>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <br>
    <%= form.label :content %>
    <%= form.text_field :content %>
    <br>
    <%= form.submit 'Update Blog Post' %>
    <% end %>
    <%= link_to 'All Blog Posts', blogs_path %>